<div class="col-md-8">
  <p id="notice"><%= notice %></p>
  
  <h1><%= @friend.full_name %>'s Exercises</h1>
  
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Duration (min)</th>
        <th>Workout details</th>
        <th>Activity date</th>
      </tr>
    </thead>
    
    <tbody>
      <% @exercises.each do |exercise| %>
        <tr><%= exercise.duration_in_min %></tr>
        <tr><%= truncate(exercise.workout, length: 100) %></tr>
        <tr><%= exercise.workout_date %></tr>
        <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= content_tag :div, "", id: "chart", data: {workouts: @exercises} %>
  
  <br>
  
  <%= link_to "Back", user_exercises_path(current_user), 
      class: "btn btn-succes btn-lg link" %>
      
</div>